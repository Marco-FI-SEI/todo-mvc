<section class="todoapp">
  <header class="header">
    <h1><%= @list.name %></h1>
    <%= form_with model: [@list, @item], local: true do |f| %>
      <%= f.text_field :description, class: "new-todo", placeholder: @item.errors.full_messages_for(:description).first || "Add a new item", autofocus: "" %>
      <%= f.submit style: "display: none" %>
    <% end %>
  </header>
  <section class="main">
    <ul class="todo-list">
      <%= render collection: @list.items, partial: "items/item_li", as: :item %>
    </ul>
  </section>
  <footer class="footer"></footer>
</section>

