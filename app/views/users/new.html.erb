<section class="todoapp">
  <header class="header">
    <h1>Signup</h1>

    <%= form_with(model: @user, class: "registration-form") do |f| %>
      <%= f.text_field :email, class: "new-todo", placeholder: @user.errors.full_messages_for(:email).first || "Enter your email", autofocus: "" %>
      <%= f.password_field :password, class: ["new-todo", "registration-password-field"], placeholder: @user.errors.full_messages_for(:password).first || "Choose a password", autofocus: "" %>
    <% end %>
  </header>

  <footer class="footer"></footer>
</section>
